{
    "if": {
        "not": {
            "anyOf": [
                {
                    "allOf": [
                        {
                            "field": "type",
                            "equals": "Microsoft.Compute/virtualMachines"
                        },
                        {
                            "field": "Microsoft.Compute/virtualMachines/sku.name",
                            "in": [
                                "Standard_DS1_v2"
                            ]
                        },
                        {
                            "field": "name",
                            "in": [
                                "webVirtualMachine1","webVirtualMachine2"
                            ]
                        },
                        {
                            "field": "location",
                            "In": [
                                "[resourceGroup().location]"
                            ]
                        },
                        {
                            "field": "location",
                            "notEquals": "global"
                        }
                    ]
                },
                {
                "field": "type",
                "contains": "Microsoft.Compute/availabilitySets"
                },
                {
                "field": "type",
                "contains": "Microsoft.Network"
                },
                {
                "field": "type",
                "contains": "Microsoft.Compute/disks"
                },
                {
                "field": "type",
                "contains": "Microsoft.Compute/virtualMachines/extensions"
                },
                {
                "field": "type",
                "contains": "Microsoft.Storage/storageaccounts"
                }
            ]
        }
    },
    "then": {
        "effect": "Deny"
    }
}
